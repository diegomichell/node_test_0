<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="stylesheet" href="/css/styles.css">
  <title>{{title}}</title>
</head>

<body>
  {{>header}}
  <form id="search">
    <input name="address" type="search" placeholder="Type in an address ..." required>
    <button type="submit">Search</button>
  </form>
  <div class="results-container">
    <div>
      <label for="tempeture">Temperature:</label>
      <input id="tempeture" type="text" readonly>
    </div>
    <div>
      <label for="prepcipability">PrecipProbability:</label>
      <input id="prepcipability" type="text" readonly>
    </div>
    <div>
      <label for="location">Location:</label>
      <input id="location" type="text" readonly>
    </div>
  </div>
  {{>footer}}

  <script src="/js/app.js"></script>
</body>

</html>